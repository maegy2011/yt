generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Channel {
  id            String   @id // معرف القناة من يوتيوب (UC...)
  name          String
  description   String?
  thumbnailUrl  String?
  category      String?
  addedAt       DateTime @default(now()) @map("added_at")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("channels")
}