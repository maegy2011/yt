generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WatchedVideo {
  id          String   @id @default(cuid())
  videoId     String   @unique
  title       String
  channelName String
  thumbnail   String
  duration    String?
  viewCount   String?
  watchedAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Performance indexes for common queries
  @@index([watchedAt])
  @@index([channelName])
  @@index([videoId])
  @@index([watchedAt, channelName])
}

model FavoriteVideo {
  id          String   @id @default(cuid())
  videoId     String   @unique
  title       String
  channelName String
  thumbnail   String
  duration    String?
  viewCount   String?
  addedAt     DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Performance indexes for common queries
  @@index([addedAt])
  @@index([channelName])
  @@index([videoId])
  @@index([addedAt, channelName])
}

model FavoriteChannel {
  id              String   @id @default(cuid())
  channelId       String   @unique
  name            String
  thumbnail       String
  subscriberCount String?
  videoCount      String?
  viewCount       String?
  addedAt         DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Performance indexes for common queries
  @@index([addedAt])
  @@index([name])
  @@index([channelId])
}

model Notebook {
  id          String      @id @default(cuid())
  title       String
  description String?
  color       String      @default("#3b82f6")
  isPublic    Boolean     @default(false)
  tags        String      @default("")
  category    String      @default("general")
  thumbnail   String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  notes       VideoNote[]
  noteLinks   NoteLink[]
  pdfs        PdfFile[]
  
  // Performance indexes for common queries
  @@index([createdAt])
  @@index([category])
  @@index([isPublic])
  @@index([createdAt, category])
}

model VideoNote {
  id          String    @id @default(cuid())
  videoId     String
  title       String
  channelName String
  thumbnail   String
  note        String
  fontSize    Int       @default(16)
  startTime   Int?
  endTime     Int?
  isClip      Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  notebookId  String?
  notebook    Notebook? @relation(fields: [notebookId], references: [id])
  noteLinks   NoteLink[]
  
  // Performance indexes for common queries
  @@index([notebookId, createdAt])
  @@index([videoId])
  @@index([createdAt])
  @@index([notebookId])
  @@index([channelName])
  @@index([isClip])
}

model NoteLink {
  id         String   @id @default(cuid())
  noteId     String
  notebookId String
  createdAt  DateTime @default(now())
  
  note     VideoNote @relation(fields: [noteId], references: [id], onDelete: Cascade)
  notebook Notebook  @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  
  @@unique([noteId, notebookId])
  
  // Performance indexes for common queries
  @@index([noteId])
  @@index([notebookId])
  @@index([createdAt])
}

model VideoPlaybackPosition {
  id          String   @id @default(cuid())
  videoId     String   @unique
  title       String
  channelName String
  thumbnail   String
  duration    Float
  currentTime Float    @default(0)
  lastWatched DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Performance indexes for common queries
  @@index([lastWatched])
  @@index([videoId])
  @@index([channelName])
}

model PdfFile {
  id          String   @id @default(cuid())
  notebookId  String
  filename    String
  originalName String
  size        Int
  mimeType    String
  path        String
  uploadedAt  DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  notebook    Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  
  @@index([notebookId])
}

model BlacklistedItem {
  id          String   @id @default(cuid())
  itemId      String   @unique
  title       String
  type        String   // 'video' | 'playlist' | 'channel'
  thumbnail   String?
  channelName String?
  addedAt     DateTime @default(now())
  updatedAt   DateTime @updatedAt
  expiresAt   DateTime? // Temporary blacklisting
  
  // Performance optimizations for large-scale blacklisting
  isChannelBlock Boolean @default(false) // Quick filter for channel-level blocks
  priority    Int      @default(0) // Priority for conflict resolution
  batchId     String?  // Track batch imports for management
  categoryId  String?  // Category-based filtering
  
  // Relations
  category    BlacklistCategory? @relation(fields: [categoryId], references: [id])
  
  // Optimized indexes for direct lookups (removed MD5 hashing)
  @@index([itemId])
  @@index([type])
  @@index([isChannelBlock, type])
  @@index([addedAt])
  @@index([priority])
  @@index([channelName]) // Added for channel-based lookups
  @@index([expiresAt]) // Added for temporary blacklisting
  @@index([categoryId]) // Added for category-based filtering
}

model WhitelistedItem {
  id          String   @id @default(cuid())
  itemId      String   @unique
  title       String
  type        String   // 'video' | 'playlist' | 'channel'
  thumbnail   String?
  channelName String?
  addedAt     DateTime @default(now())
  updatedAt   DateTime @updatedAt
  expiresAt   DateTime? // Temporary whitelisting
  
  // Performance optimizations for large-scale whitelisting
  isChannelWhitelist Boolean @default(false) // Quick filter for channel-level whitelists
  priority    Int      @default(0) // Priority for conflict resolution
  batchId     String?  // Track batch imports for management
  
  // Optimized indexes for direct lookups (removed MD5 hashing)
  @@index([itemId])
  @@index([type])
  @@index([isChannelWhitelist, type])
  @@index([addedAt])
  @@index([priority])
  @@index([channelName]) // Added for channel-based lookups
  @@index([expiresAt]) // Added for temporary whitelisting
}

// New model for audit logging
model BlacklistAuditLog {
  id          String   @id @default(cuid())
  action      String   // 'add' | 'remove' | 'modify' | 'expire'
  itemType    String   // 'blacklist' | 'whitelist'
  itemId      String
  previousData String?  // JSON string of previous state
  newData     String?  // JSON string of new state
  reason      String?
  userId      String?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  
  // Indexes for audit queries
  @@index([action])
  @@index([itemType])
  @@index([itemId])
  @@index([createdAt])
  @@index([userId])
}

// New model for undo/redo operations
model BlacklistOperation {
  id          String   @id @default(cuid())
  operationId String   @unique // Unique identifier for the operation
  action      String   // 'add' | 'remove' | 'modify'
  itemType    String   // 'blacklist' | 'whitelist'
  itemId      String
  itemData    String   // JSON string of the item data
  isUndo     Boolean  @default(false)
  isRedo     Boolean  @default(false)
  userId      String?
  createdAt   DateTime @default(now())
  appliedAt   DateTime?
  
  // Indexes for operation tracking
  @@index([operationId])
  @@index([action])
  @@index([itemType])
  @@index([userId])
  @@index([createdAt])
}

// New model for category-based filtering
model BlacklistCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  color       String   @default("#ff0000")
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  items       BlacklistedItem[]
  
  @@index([name])
  @@index([isActive])
}

// New model for pattern-based blocking
model BlacklistPattern {
  id          String   @id @default(cuid())
  pattern     String   // Regex pattern or keyword
  type        String   // 'title' | 'channel' | 'description' | 'tags'
  patternType String   @default("keyword") // 'keyword' | 'regex' | 'wildcard'
  isActive    Boolean  @default(true)
  priority    Int      @default(0)
  matchCount  Int      @default(0) // Track usage statistics
  lastMatched DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([type, isActive])
  @@index([priority])
  @@index([patternType])
}

// New model for bulk import tracking
model BlacklistBatch {
  id          String   @id @default(cuid())
  name        String?  // Optional batch name
  description String?
  source      String   // 'file' | 'api' | 'manual'
  itemCount   Int      @default(0)
  successCount Int      @default(0)
  errorCount  Int      @default(0)
  status      String   @default("pending") // 'pending' | 'processing' | 'completed' | 'failed'
  filePath    String?  // For file imports
  metadata    String?  // JSON metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([status])
  @@index([createdAt])
  @@index([source])
}

// New model for blacklist performance metrics
model BlacklistMetrics {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  totalItems  Int      @default(0)
  videoCount  Int      @default(0)
  channelCount Int     @default(0)
  playlistCount Int    @default(0)
  filterHits  Int      @default(0) // How many times blacklist was applied
  avgFilterTime Float   @default(0) // Average filtering time in ms
  cacheHitRate Float    @default(0) // Cache hit rate percentage
  
  @@unique([date])
  @@index([date])
}
